			<td>쿠키정보</td>
			<%
			Cookie[] cookie = request.getCookies();
			if (cookie == null) {
			%>
			<td>쿠키 정보가 없습니다</td>
			<%
			} else {
			for (Cookie c : cookie) {
			%>
			<td><%=c.getName()%>(<%=c.getValue()%></td>
			<%
			}
			}
			%>
		</tr>
		
