<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	Cookie cookie= new Cookie("name", "Lee Kang In");
	cookie.setMaxAge(600);
	response.addCookie(cookie);
%>    
    
    
    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<h2>
<%=cookie.getName() %>
<%=cookie.getValue() %>
<%=cookie.getMaxAge() %>
</h2>
</body>
</html>